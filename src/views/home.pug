extends base
include mixins/musicMixin

block content
    div#searchh
     form(method="POST", action="/search")
      input(type="text" id="searched" placeholder="search" name="search")  
    div#realComend
     div#comend 
      div#play_center
       if audio 
        audio()
         source(src=`${music.fileUrl}`,type="audio/mpeg")
      div#Control_Center
       each potato in music 
        +music(potato)   
    script(src="/static/js/musicHandle.js")    
